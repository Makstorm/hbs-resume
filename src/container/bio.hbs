{{! 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
    <main>
      {{> title big=true data=name}}
      <section>
        <div>Birthday: {{birthdate}}</div>
        <br>
        <div>Birth place: {{birthplace}}</div>
        <br>
        <div>Death place: {{deathplace}}</div>
        <br>
        <div>Days of life:{{birthdate}} -- {{deathdate}}</div>
        <br>
        <div>Nationality:{{nationality}}</div>
        <br>
        <div>Occupation:{{occupation}}</div>
        <br>
        <div>
          {{> title data='Famous for:'}}
          <ul>
            {{#each known_for}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Education:'}}
          <ul>
            {{#each education}}
              <li>
                <div>degree:{{degree}}</div>
                <br>
                <div>Field:{{field}}</div>
                <br>
                <div>institution:{{institution}}</div>
                <br>
                <div>year:{{year}}</div>
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Publications:'}}
          <ul>
            {{#each notable_publications}}
              <li>
                <div>title:{{title}}</div>
                <br>
                <div>year:{{year}}</div>
                <br>
                <div>publisher:{{publisher}}</div>
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Partners:'}}
          <ul>
            {{#each partners}}
              <li>
                <div>name:{{name}}</div>
                <br>
                <div>relationship:{{relationship}}</div>
                <br>
                <div>years:{{years}}</div>
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Awards:'}}
          <ul>
            {{#each awards}}
              <li>
                <div>title:{{title}}</div>
                <br>
                <div>year:{{year}}</div>
                <br>
                <div>description:{{description}}</div>
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Influences:'}}
          <ul>
            {{#each influences}}
              <li>
                {{this}}
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Influenced:'}}
          <ul>
            {{#each influenced}}
              <li>
                {{this}}
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Quotes:'}}
          <ul>
            {{#each quotes}}
              <li>
                {{this}}
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Major discoveries:'}}
          <ul>
            {{#each major_discoveries}}
              <li>
                <div>title:{{title}}</div>
                <br>
                <div>year:{{year}}</div>
                <br>
                <div>description:{{description}}</div>
              </li>
              <br>
            {{/each}}
          </ul>
        </div>

        <div>
          {{> title data='Contributions:'}}
          <ul>
            {{#with contributions}}
              <li>
                <div>title:{{title}}</div>
                <br>
                <div>year:{{year}}</div>
                <br>
                <div>description:{{description}}</div>
                <br>
                <div>field:{{field}}</div>
              </li>
              <br>
            {{/with}}
          </ul>
        </div>

      </section>
    </main>
  {{/with}}
</div>

