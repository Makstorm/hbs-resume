{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        {{#with person}}
        {{> title big=true data=name}}
        <section>
            {{> title data='Details:'}}
            
            <div>Age: {{age}}</div>

            <br>

            <div>Gender: {{gender}}</div>
            
            <br>
            {{#with address}}
            <div>
                <ul>
                    <li>{{street}}</li>
                    <li>{{city}}</li>
                    <li>{{state}}</li>
                    <li>{{zip}}</li>
                    <li>{{country}}</li>
                </ul>
            </div>
            {{/with}}

            <br>
            
            <div>
                {{> title data='Education'}}
                <ul>
                    {{#each education}}
                    <li>degree: {{degree}}</li>
                    <li>major: {{major}}</li>
                    <li>university: {{university}}</li>
                    <li>graduationYear: {{graduationYear}}</li>
                    {{/each}}
                </ul>
            </div>
            
            <br>
            
            
            <div>
                {{> title data='Work expirience'}}
                <ul>
                    {{#each workExperience}}
                        <li>
                            <div>{{company}}</div>
                            <div>{{title}}</div>
                            <div>{{startDate}}--{{endDate}}</div>
                            
                            <div>
                                {{> title data='Responsibilities'}}
                                <ul>
                                    {{#each responsibilities}}
                                        <li>{{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                            <div>{{year_founded}}</div>
                            <div>{{industry}}</div>
                            
                            <div>
                                {{> title data='Enployees'}}
                                <ul>
                                    {{#each employees}}
                                        <li>
                                            <div>{{name}}</div>
                                            <div>{{position}}</div>
                                            <div>{{department}}</div>
                                            <div>
                                                {{> title data='Projects'}}
                                                <ul>
                                                    {{#each projects}}
                                                        <li>
                                                            <div>{{name}}</div>
                                                            <div>{{description}}</div>
                                                            <div>{{status}}</div>
                                                            <div>
                                                                {{> title data='Projects'}}
                                                                <ul>
                                                                    {{#each teams}}
                                                                    <li>
                                                                        <div>{{team_name}}</div>
                                                                        <div>{{team_leader.title}} {{team_leader.name}} {{team_leader.email}}</div>
                                                                        <div>{{status}}</div>
                                                                        <div>
                                                                            {{> title data='Team members'}}
                                                                            <ul>
                                                                                {{#each team_members}}
                                                                                <li>
                                                                                    <div>{{team_name}}</div>
                                                                                    <div>Team title: {{title}}</div>
                                                                                    <div>{{email}}</div>
                                                                                    <div>
                                                                                        {{> title data='Skills'}}
                                                                                        <ul>
                                                                                            {{#each skills}}
                                                                                            <li>
                                                                                                {{this}}
                                                                                            </li>
                                                                                            {{/each}}
                                                                                        </ul>
                                                                                    </div>

                                                                                    <div>
                                                                                        {{> title data='projects'}}
                                                                                        <ul>
                                                                                            {{#each projects}}
                                                                                            <li>
                                                                                                <div>Project name: {{name}}</div>
                                                                                                <div>description: {{description}}</div>
                                                                                                <div>
                                                                                                    {{> title data='Technologies'}}
                                                                                                    <ul>
                                                                                                        {{#each technologies}}
                                                                                                        <li>
                                                                                                            {{this}}
                                                                                                        </li>
                                                                                                        {{/each}}
                                                                                                    </ul>
                                                                                                </div>
                                                                                                <div>
                                                                                                    {{> title data='Team members'}}
                                                                                                    <ul>
                                                                                                        {{#each team_members}}
                                                                                                        <li>
                                                                                                            <div>Member: {{title}}, {{name}}</div>
                                                                                                        </li>
                                                                                                        {{/each}}
                                                                                                    </ul>
                                                                                                </div>
                                                                                            </li>
                                                                                            {{/each}}
                                                                                        </ul>
                                                                                    </div>
                                                                                </li>
                                                                                {{/each}}
                                                                            </ul>
                                                                        </div>
                                                                    </li>
                                                                    {{/each}}
                                                                </ul>
                                                            </div>
                                                        </li>
                                                    {{/each}}
                                                </ul>
                                            </div>
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                        </li>
                        

                    {{/each}}
                </ul>
            </div>
            <br>
        </section>
        {{/with}}
    </main>
    {{/with}}
</div>

