<div>
  {{#with main}}
    <main class='row py-5 mx-auto'>
      

      {{#with newsBlock}}
        <section class='col-12 row g-4'>
          <h2 class='col-12 text-center'>{{title}}</h2>
          {{#each cards}}
            <div class='col-3'>
              <div class='card text-white bg-dark'>
                <div class='card-header'>
                  {{title}}
                  {{#if isTop}}<span
                      class='badge text-bg-danger'
                    >Топ</span>{{/if}}

                  {{#if isNew}}<span
                      class='badge text-bg-success'
                    >Нова</span>{{/if}}
                </div>
                <div class='card-body'>
                  <p class='card-text'>{{description}}</p>
                </div>
              </div>
            </div>
          {{/each}}

          <hr class='my-5' />
        </section>
      {{/with}}

      {{#with goodsBlock}}
        <section class='col-12 row gy-4'>
          <ul class='nav nav-tabs mb-3'>
            {{#each tabs}}
              <li class='nav-item'>
                <a
                  class='nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}'
                  aria-current='page'
                  href='#'
                >{{text}}</a>
              </li>
            {{/each}}
          </ul>

          {{#each cards}}
            {{> shopcard data=this}}
          {{/each}}

          <hr class="my-5">
        </section>
      {{/with}}

      {{#with subscribe}}
        <section class="row col-12">
          <card class="col-12 text-bg-dark">
            <ul class="nav justify-content-between align-items-center">
              <li class="nav-item">
                <ul class="nav flex-column">
                  <div class="nav-item mt-2 ms-2">
                    <h2>{{header}}</h2>
                    
                  </div>
                  <div class="nav-item mt-2 ms-2">
                    <p>{{description}}</p>
                  </div>
                </ul>
              </li>
              <li class="nav-item">
                <ul class="nav">
                  {{#each buttons}}
                    <li class="nav-item">
                      <a href="{{link}}" class="btn btn-primary me-3">{{text}}</a>
                    </li>
                  {{/each}}
                </ul>
              </li>
            </ul>
          </card>
          <hr class="my-5">
        </section>
      {{/with}}

      {{#with service}}
        <section class="col-12 row">
          {{> shopaction data=this}}
        </section>
      {{/with}}

      
    </main>
  {{/with}}
</div>