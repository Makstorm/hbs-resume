<div>
  {{#with main}}
    <main class='row p-0 mx-auto'>

      <section class='mt-5'>

        <div class='row p-0 mx-auto'>
          <h1>{{header}}</h1>
        </div>

      </section>

      <section class=''>
        {{#with purchase}}
          <div class='row p-0 mx-auto mt-3'>
            <ul class='nav nav-tabs'>
              {{#each tabs}}
                <li class='nav-item '>
                  <a class='nav-link {{#if @first}}active{{/if}}' href='#'>{{this}}</a>
                </li>
              {{/each}}
            </ul>
            <div class="mt-3">
              {{#with actionBlock}}
                <form class="row g-3">
                  <div class="col-auto">
                    <label for="inputPassword2" class="visually-hidden">Password</label>
                    <input type="text" class="form-control" id="inputPassword2" placeholder="{{input.placeholder}}">
                  </div>
                  {{#each buttons}}
                    <div class="col-auto">
                      <a href="{{link}}" class="btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                    </div>
                  {{/each}}
                </form>
              {{/with}}
            </div>
            <div>
              <hr class="my-3">
            </div>

            <div>
              {{#each itemList}}
                {{> purchaseitem data=this}}
              {{/each}}
            </div>
          </div>
        {{/with}}
      </section>

      <div>
        <hr class='my-5' />
      </div>

      <section class=''>
        {{#with userInfo}}
          <div class='row p-0 mx-auto mt-3'>
            <h2>{{title}}</h2>
            
            {{#with profileData}}
              <div class="card row mt-4 mx-auto p-2">
                <h3>{{title}}</h3>

                <div class="card mt-2">
                  
                    <div class="row p-2 ">
                      {{#each fullName}}
                        <div class="col-4">
                          <p>{{title}}</p>
                          <h6>{{value}}</h6>
                        </div>                      
                      {{/each}}
                    </div>
                  
                </div>

                <div class="card mt-2">
                  
                    <div class="row p-2 ">
                      {{#each otherInfo}}
                        <div class="col-4">
                          <p>{{title}}</p>
                          <h6>{{value}}</h6>
                        </div>                      
                      {{/each}}
                    </div>
                  
                </div>

                <div class="card mt-2">
                  
                    <div class="row p-2 ">
                      {{#each ../buttons}}
                        <div class="col-4">
                          <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                        </div>                      
                      {{/each}}
                    </div>
                  
                </div>

              </div>
              
            {{/with}}

            {{#with recipients}}
              <div class="card row mt-4 mx-auto p-2">
                <h3>{{title}}</h3>

                <div class="row mx-auto p-2">
                  {{#each users}}
                    <div class="card col-4 mt-2 ms-2 p-2">
                    
                      <h6 class="">{{name}}</h6>
                      <p>{{phone}}</p>
                      <div>
                        {{#with button}}
                          <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/with}}
                      </div>
                    
                  </div>
                {{/each}}
                </div>

                

              </div>
              
            {{/with}}

            {{#with contacts}}
              <div class="card row mt-4 mx-auto p-2">
                <h3>{{title}}</h3>

                <div class="row mx-auto p-2 g-2">
                  {{#each contactData}}
                    <div class="col-4">
                        <div class="card p-2">
                        
                          <h6 class="">{{title}}</h6>
                          <p>{{value}}</p>
                          <div>
                            {{#with button}}
                              <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-outline-secondary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
                            {{/with}}
                          </div>
                        
                      </div>
                    </div>
                {{/each}}
                </div>

                

              </div>
              
            {{/with}}

          </div>
        {{/with}}
      </section>

      <div>
        <hr class='my-5' />
      </div>

    </main>
  {{/with}}
</div>