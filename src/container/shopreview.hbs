<div>
  {{#with main}}
    <main class='row p-0 mx-auto'>
      <section class='col-8'>
        {{#with formBlock}}
          <h1 class='mt-5'>{{header}}</h1>
          {{#with rating}}
            <p class='mt-3'>
              {{title}}:
              {{value}}
            </p>
          {{/with}}

          {{#with actionBlock}}
            <div>
              <ul class='nav nav-tabs'>
                {{#each tabs}}
                  <li class='nav-item'>
                    <a
                      class='nav-link 
                        {{#if isActive}}
                          active
                        {{/if}}'
                      href='#'
                    >{{text}}</a>
                  </li>
                {{/each}}
              </ul>

              <div>
                <hr class="my-5">
              </div>

              <div class="row p-0 mx-auto">
                <div class="card p-3">
                  {{#with report}}
                    <p class="mt-0">{{title}}</p>
                    <div>
                      <a href="{{button.link}}" class="btn btn-secondary">{{button.text}}</a>
                    </div>
                  {{/with}}
                </div>
              </div>

              <div>
                <hr class="my-5">
              </div>
            </div>
          {{/with}}

          {{#with feedbackBlock}}
            <div>
              <h2>{{title}}</h2>
              {{#each buttons}}
                <a href="{{link}}" class="mt-4 btn {{#if isWarning}}btn-warning text-light{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}">{{text}}</a>
              {{/each}}
            </div>
          {{/with}}
          
        {{/with}}

        
      </section>

      <section class="col-4">
        {{#with formBlock}}
          {{#with goodsInfo}}
            <div class="card mt-5 p-4">
              <div>
                <img width="150px" src="{{photo}}" alt="">
                <h6 class="mt-4">{{name}}</h6>
              </div>
            </div>

            <div class="card mt-3 p-4">
              <div>
                <h5>{{price}}</h5>
                <p>Є в наявності</p>
                {{#each buttons}}
                  <div class="
                    {{#if @last}}
                      mt-2
                    {{/if}}">
                    <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a>
                  </div>
                {{/each}}
              </div>            
            </div>

            <div class="card mt-3 p-3">
              <div class="m-0">
                <p class="m-0">{{seller.title}}: <strong>{{seller.value}}</strong></p>
              </div>
            </div>
          {{/with}}
        {{/with}}
      </section>

      <div>
        <hr class="my-5">
      </div>

      <section>
        {{#each reviewList}}
          {{> reviewItem data=this}}
        {{/each}}
      </section>

      <section class="mt-5">
        {{> shopaction data=service}}
      </section>

      <div>
        <hr class="mt-5 mb-2">
      </div>
    </main>
  {{/with}}
</div>