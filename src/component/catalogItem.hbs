{{#with data}}
    <div class='col-6 mb-3'>
        <div class='card'>
        <img
            src='{{img}}'
            alt=''
            class='card-img-top'
        />
        <div class='card-body'>
            <div>
            {{#if isHot}}
                <span
                class='badge bg-warning'
                >HOT!</span>
            {{/if}}

            {{#if isNew}}
                <span
                class='badge bg-primary'
                >Нове</span>
            {{/if}}
            </div>

            <div class='mt-3'>
            {{#if isFast}}
                <div class='mt-2'>
                <span
                    class='badge bg-success'
                >Швидка доставка
                </span>
                </div>
            {{/if}}

            {{#if isFree}}
                <div class='mt-2'>
                <span
                    class='badge bg-secondary'
                >Швидка доставка
                </span>
                </div>
            {{/if}}
            </div>

            <div class='card-title mt-3'>
            {{name}}
            </div>

            <div>
            {{#with review}}
                <p>{{amount}} {{text}}</p>
            {{/with}}

            <h5>{{price}}</h5>

            <p>{{delivery}}</p>
            </div>

            <div class="my-3">
            {{#each buttons}}
                <div class="{{#if @last}}{{else}}mb-2{{/if}}">
                <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isSecondary}}btn-secondary{{/if}}">{{text}}</a>
                </div>
            {{/each}}
            </div>

            <div>
            <ul>
                {{#each characteristics}}
                <li>{{title}}: {{value}}</li>
                {{/each}}
            </ul>
            </div>
        
        </div>
        </div>
    </div>
{{/with}}