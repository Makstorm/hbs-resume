{{#with data}}
  <div class='card text-bg-success'>
    <div class='card-body text-center'>
      <h2 class='card-title'>{{title}}</h2>
      <p class='card-text'>{{description}}</p>
      {{#each buttons}}
        <div class='mb-2'>
          <a
            href='{{link}}'
            class='btn btn-primary'
          >{{text}}</a>
        </div>
      {{/each}}

    </div>
  </div>
{{/with}}